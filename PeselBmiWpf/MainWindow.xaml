<Window x:Class="PeselBmiWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeselBmiWpf"
        xmlns:view="clr-namespace:PeselBmiWpf.View"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Height="400" Width="625">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="42*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <view:InputTextBox x:Name="FirstNameInputTextBox" Text="Imię" Margin="10 0 20 0" Grid.Row="0" Grid.Column="0" />
            <view:InputTextBox x:Name="LastNameInputTextBox" Text="Nazwisko" Margin="10 0 20 0" Grid.Row="1" Grid.Column="0"/>
            <view:InputTextBox x:Name="PeselInputTextBox" Text="Pesel" Margin="10 0 20 0" Grid.Row="2" Grid.Column="0"/>

            <view:InputTextBox x:Name="HeightInputTextBox" Text="Wzrost (cm)" Margin="10 0 20 0" Grid.Row="0" Grid.Column="1"/>
            <view:InputTextBox x:Name="WeightInputTextBox" Text="Masa (kg)" Margin="10 0 20 0" Grid.Row="1" Grid.Column="1"/>

            <Button x:Name="CalculateBmiButton" Content="Oblicz" FontSize="20" FontWeight="Bold"
                    HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Grid.Row="2" Grid.Column="1" Width="250" Height="36" Click="CalculateBmiButton_Click"/>
        </Grid>

        <Grid Grid.Row="1" Background="LightGray" Margin="10 0">
            <Label x:Name="BmiResultTitleLabel" Content="Uzyskane wyniki:" FontSize="16" FontWeight="Bold" Margin="0 0 0 0"/>
        </Grid>
        
        <Grid Grid.Row="2" Background="LightGray" Margin="10 0 10 10">
            <Label x:Name="BmiResultLabel" FontSize="16" Margin="0 0 0 0"/>            
        </Grid>
    </Grid>
</Window>
