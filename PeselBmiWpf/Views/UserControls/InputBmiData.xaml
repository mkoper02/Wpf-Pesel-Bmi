<UserControl x:Class="PeselBmiWpf.Views.UserControls.InputBmiData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PeselBmiWpf.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Dodaj nowy pomiar BMI:" FontSize="18" FontWeight="Bold" Padding="0 10 0 0"/>

        <local:InputTextBox x:Name="HeightInputTextBox" Text="Wzrost (cm):" Grid.Row="1"/>
        <local:InputTextBox x:Name="WeightInputTextBox" Text="Waga (kg):" Grid.Row="2"/>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="AddBmiButton" Click="AddBmiButton_Click" 
                    Grid.Column="0" Content="Dodaj Pomiar BMI" FontSize="12" Margin="0 5 5 5"/>

            <Button x:Name="UpdateBmiButton" Click="UpdateBmiButton_Click"
                    Grid.Column="1" Content="Aktualizuj Pomiar" FontSize="12" Margin="0 5 0 5"/>
        </Grid>
    </Grid>
</UserControl>
